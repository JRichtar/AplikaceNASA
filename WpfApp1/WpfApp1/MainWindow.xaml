<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="450" MaxWidth="800" MinHeight="450" MinWidth="800" Height="450" Width="800" Background="Black">
    <Grid>
        <Button x:Name="button1" Content="Zobrazit objekty" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="120" Margin="630,350,0,0" Click="Button_Click"></Button>
        <Button x:Name="button2" Content="Aktualizovat" HorizontalAlignment="Right" VerticalAlignment="Top" Height="40" Width="120" Margin="0,350,200,0" Click="Button_Click" Visibility="Hidden"></Button>

        <Label x:Name="label1" Content="NASAplikace" HorizontalAlignment="Left" VerticalAlignment="Top" Height="60" Width="215" Margin="10,10,0,0" Foreground="Yellow" FontSize="24"/>
        <Label x:Name="label2" Content="{Binding text}" Foreground="Yellow" Margin="82,75,82,95"></Label>
    </Grid>
</Window>
